    <p>
      <strong>線路名:</strong>
      <%= i.line %>
    </p>
    <p>
      <strong>駅名:</strong>
      <%= i.station_name %>
    </p>
    <p>
      <strong>徒歩分数:</strong>
      <%= i.walk_time %>
    </p>
    <% number += 1%>
  <% end %>


