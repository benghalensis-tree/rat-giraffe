<% i = 0%>
  <%= form.fields_for :nearest_stations do |g|%>
  <h2>最寄り駅<%= 1+i %></h2>
    <div class="field">
      <%= g.label :路線名 %>
      <%= g.text_field :line %>
    </div>

    <div class="field">
      <%= g.label :駅名 %>
      <%= g.text_field :station_name %>
    </div>

    <div class="field">
      <%= g.label :徒歩分数 %>
      <%= g.text_field :walk_time %>
    </div>
    <% i += 1%>

  <% end %>

  <% actions = action_name%>

  <div class = actions>
    <%= form.submit %>
  </div>
